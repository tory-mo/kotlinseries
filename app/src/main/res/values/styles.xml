<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonWhiteCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="PopupMenuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="OverviewTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="grid_cell_style" parent="OverviewTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="grid_style">
        <item name="android:numColumns">7</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="header_style"  parent="OverviewTextViewStyle">
        <item name="android:padding">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <style name="chkBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="CustomActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccentTranslucent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/light_bg</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@drawable/ic_not_favorite</item>
        <!--<item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>-->
        <item name="android:backgroundTint">@color/colorAccent</item>


    </style>

</resources>
